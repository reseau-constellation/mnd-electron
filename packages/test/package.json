{
  "name": "@constl/mandataire-electron-test",
  "description": "Appli électron pour tester le mandataire Constellation.",
  "repository": {
    "url": "https://github.com/reseau-constellation/mandataire-electron"
  },
  "homepage": "https://réseau-constellation.ca",
  "author": {
    "email": "julien.malard@mail.mcgill.ca",
    "name": "Julien Jean Malard-Adam",
    "url": "https://github.com/julienmalard"
  },
  "version": "2.1.0",
  "type": "module",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production pnpm run build && electron-builder build --config .electron-builder.config.cjs",
    "test": "pnpm run build && vitest run",
    "lint": "eslint . --fix",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "pnpm run typecheck:main && pnpm run typecheck:preload && pnpm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "formatter": "pnpm lint && npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,vue,json}\""
  },
  "devDependencies": {
    "@constl/utils-tests": "^1.2.6",
    "@eslint/js": "^9.4.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/d3": "^7.4.3",
    "@types/deep-equal": "^1.0.4",
    "@types/file-saver": "^2.0.7",
    "@types/lodash": "^4.17.1",
    "@types/node": "^20.12.10",
    "@types/papaparse": "^5.3.14",
    "@types/platform": "^1.3.6",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^9.0.8",
    "@types/webfontloader": "^1.6.38",
    "@vitejs/plugin-vue": "5.0.4",
    "@vitest/coverage-istanbul": "^1.6.0",
    "@vue/test-utils": "2.4.6",
    "cross-env": "7.0.3",
    "electron": "30.0.8",
    "electron-builder": "24.13.3",
    "eslint": "9.4.0",
    "eslint-plugin-vue": "9.26.0",
    "globals": "^15.3.0",
    "happy-dom": "14.11.1",
    "nano-staged": "0.8.0",
    "node-pre-gyp": "^0.17.0",
    "playwright": "1.44.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-resolve-id": "^1.0.2",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.4.5",
    "typescript-eslint": "^7.12.0",
    "unplugin-auto-expose": "0.3.0",
    "vite": "5.2.11",
    "vite-plugin-commonjs-externals": "^0.1.4",
    "vitest": "1.6.0",
    "vue-tsc": "2.0.19"
  },
  "dependencies": {
    "@achingbrain/nat-port-mapper": "1.0.13",
    "@constl/ipa": "^1.0.31",
    "@constl/mandataire": "^2.0.7",
    "@constl/mandataire-electron-principal": "workspace:^",
    "@constl/mandataire-electron-rendu": "workspace:^",
    "@constl/serveur": "^2.0.9",
